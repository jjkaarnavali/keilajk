@model WebApp.Models.QuizIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <tbody>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="my-4">Categories</h1>
                <div class="list-group">
                    @foreach (var item in Model.Categories!)
                    {
                        <a href="?Search=@item.Id" class="list-group-item">@Html.DisplayFor(modelItem => item.CategoryName)</a>
                    }
                </div>
            </div>
            <div class="col-lg-12">
                <br>

                <div class="row">
                    @foreach (var item in Model.Quizzes!)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h3 class="card-title">
                                        <a>@Html.DisplayFor(modelItem => item.Name)</a>
                                    </h3>
                                    <p>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </p>
                                    @if (item.CategoryName! != "Poll")
                                    {
                                        <h4>Average score: @Html.DisplayFor(modelItem => item.AverageScore)%</h4>
                                        <h4>Times played: @Html.DisplayFor(modelItem => item.TimesPlayed)</h4>
                                    }
                                </div>
                                <div class="card-footer">
                                    <a asp-action="Play" class="btn btn-primary" asp-route-id="@item.Id">Play</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    </tbody>
</table>