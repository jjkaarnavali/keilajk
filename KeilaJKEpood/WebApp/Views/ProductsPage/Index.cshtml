@model IEnumerable<BLL.App.DTO.Product>
<!DOCTYPE html>
<html lang="en">
    
    <body>
        
        <!-- Section-->
        <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..."/>
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@Html.DisplayFor(modelItem => item.ProductName)</h5>
                                    <!-- Product price-->
                                    @Html.DisplayFor(modelItem => item.Price)
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a asp-controller="ProductDetailsPage" asp-action="Index" asp-route-id="@item.Id">@Resources.Base.Common.View</a></div>
                            </div>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a asp-action="AddToCart" asp-route-amount="1" asp-route-productId="@item.Id">@Resources.Base.Common.AddToCart</a></div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            </div>
        </section>
        <!-- Footer-->
        
        <!-- Bootstrap core JS
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
        
        <script src="js/scripts.js"></script>
        -->
    </body>
</html>
