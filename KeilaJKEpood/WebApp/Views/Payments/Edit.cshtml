@model BLL.App.DTO.Payment

@{
    ViewData["Title"] = "Edit";
}

<h1>@Resources.Base.Common.Edit</h1>

<h4>@Resources.BLL.App.DTO.Payment.EntityName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
