@using Microsoft.AspNetCore.Identity
@using Domain.App.Identity
@model System.Collections.Generic.List<string>

@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>
@for (int i = 0; i < Model.Count - 1; i++)
{
    <div>
        <h4>AppRole</h4>
        <hr/>

        <dl class="row">
            <dt class="col-sm-2">
                Role
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model[i])
            </dd>

        </dl>


    </div>
    <div>
        <a asp-action="RemoveFromRole" asp-route-id="@Model[Model.Count -1]" asp-route-role="@Model[i]">Remove</a> |
        <a asp-action="Index">Back to List</a>
    </div>
}
<div>
    <a asp-action="AddToCustomerRole" asp-route-id="@Model[Model.Count -1]">Add to customer role</a> |
</div>